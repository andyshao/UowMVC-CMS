@{
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
    <title>上报成功</title>
    <meta charset="utf-8" />
    <!-- start: CSS file-->
    <!-- Vendor CSS-->
    <link href="/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
    <link href="/assets/vendor/skycons/css/skycons.css" rel="stylesheet" />
    <link href="/assets/vendor/font-awesome/css/font-awesome.min.css" rel="stylesheet" />

    <!-- Plugins CSS-->
    <!-- Theme CSS -->
    <link href="/assets/css/jquery.mmenu.css" rel="stylesheet" />

    <!-- Page CSS -->
    <link href="/assets/css/style.css" rel="stylesheet" />
    <link href="/assets/css/add-ons.min.css" rel="stylesheet" />

    <style>
        footer {
            display: none;
        }
    </style>

    <!-- end: CSS file-->
    <!-- Head Libs -->
    <script src="/assets/plugins/modernizr/js/modernizr.js"></script>

    <!-- HTML5 Shim and Respond.js IE8 support of HTML5 elements and media queries -->
    <!-- WARNING: Respond.js doesn't work if you view the page via file:// -->
    <!--[if lt IE 9]>
        <script src="https://oss.maxcdn.com/html5shiv/3.7.2/html5shiv.min.js"></script>
        <script src="https://oss.maxcdn.com/respond/1.4.2/respond.min.js"></script>
    <![endif]-->

</head>
<body>
    <div class="container-fluid content" style="padding-top:20px">
        <div class="row">
            <!-- Main Page -->
            <div id="content" class="col-sm-12 full">
                <div class="row">
                    <div class="register-box">
                        <div class="panel bk-bg-white panel-sign">
                            <div class="panel-body text-center bk-padding-off bk-wrapper">
                                <img src="/assets/img/flat-landscape.jpg" class="img-responsive bk-radius-top">
                                <div class="bk-avatar bk-avatar120-halfdown">
                                    <div class="bk-vcenter"></div>
                                    <div class="bk-fg-info bk-fg-darken">

                                    </div>
                                </div>
                            </div>
                            <div class="panel-body bk-bg-white bk-padding-left-30 bk-padding-right-30 bk-avatar120-halfdown-after text-center">
                                <h3 class="bk-margin-off"><strong class="text-success"><i class="fa fa-check"></i>上报成功</strong></h3>
                                <div class="bk-padding-bottom-30 bk-padding-top-10">
                                    <p class="text-danger">问题ID:@ViewBag.id</p>
                                    <p class="text-success">恭喜，此问题已经成功上报!</p>
                                    <p>
                                        <a href="javascript: history.go(-2)" class="btn btn-default">
                                            <i class="fa fa-chevron-left"></i> 返回
                                        </a>
                                        <button type="button" class="btn btn-primary" onclick="javascript: relogin();"><i class="fa fa-lock"></i> 重新登录</button>
                                        <button type="button" class="btn btn-success" onclick="javascript: gohome();"><i class="fa fa-lock"></i> 回到首页</button>

                                    </p>
                                </div>
                            </div>
                        </div>
                        <p class="text-center">技术支持 <a href="mailto:yemor@qq.com">yemor@qq.com</a></p>
                    </div>
                </div>
            </div>
            <!-- End Main Page -->
        </div>
    </div>
    <!-- end: JavaScript-->
    <script>
            function relogin() {
                if (window.parent != null) {
                    window.parent.window.location.href = "/account/login";
                } else {
                    window.location.href = "/account/login";
                }
            }
            function gohome() {
                if (window.parent != null) {
                    window.parent.window.location.href = "/";
                } else {
                    window.location.href = "/";
                }
            }
            $(function () {
                if (window.parent) {
                    $(window.parent.document).find("#mod-window .modal-dialog").css("height", "600px").css("width", "680px");
                    $(window.parent.document).find("#mod-window .modal-body").css("height", "550px");
                }
            })
    </script>
</body>
</html>
